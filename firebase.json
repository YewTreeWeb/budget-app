{
  "hosting": {
    "public": "website/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [ {
      "source": "**/*",
      "headers": [ {
        "key": "Strict-Transport-Security",
        "value": "max-age=31536000; includeSubDomains; preload"
      }, {
        "key": "X-Frame-Options",
        "value": "DENY"
      }, {
        "key": "X-XSS-Protection",
        "value": "1; mode=block"
      }, {
        "key": "Referrer-Policy",
        "value": "no-referrer"
      }, {
        "key": "X-Content-Type-Options",
        "value": "nosniff"
      } ]
    }]
  }
}